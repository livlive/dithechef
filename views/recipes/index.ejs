<% include ../partials/header %>


    <div class="container">

        <header class="jumbotron">
            <div class="container">
                <h1>Recipe Directory</h1>
                <p>Diane Moorhouse's curated collection of recipes.</p>
                <p>
                   <a class="btn btn-primary btn-large" href="/recipes/new">Add New Recipe</a> 
                </p>
            </div>
        </header>
        
      
        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <% recipes.forEach(function(recipe){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <div class="caption">                
                            <h4>   <%= recipe.name %>  </h4>
                        </div>
                        <p>
                            <a href="/recipes/<%= recipe._id%>" class="btn btn-primary">Instructions</a>
                        </p>
                    </div>
                </div>
            <% }); %>
        </div>
   </div>

<% include ../partials/footer %>