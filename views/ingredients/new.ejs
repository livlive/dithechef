<% include ../partials/header %>

<div class="container">
    <div class="row">
            <h1 style="text-align: center;">Add New Ingredient to <%=recipe.name%></h1>
            <div style="width: 30%; margin: 30px auto;">
                <form action="/recipes/<%=recipe._id%>/ingredients" method="POST">
                    <div class="form-group">
                         <input class="form-control" type="text" name="ingredient[name]" placeholder="ingredient"> 
                    </div>
                    <div class="form-group">
                         <input class="form-control" type="text" name="ingredient[measurement]" placeholder="measurement">
                    </div>
                    <div class="form-group">
                          <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
            <a href="/recipes">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>